<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1565c0"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/folderImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/folder"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headTextView"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_below="@id/folderImageView"
        android:text="Need Permission"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bodyTextView"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/headTextView"
        android:text="@string/permission_body"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accessButton"
        android:textColor="#000"
        android:backgroundTint="#fff"
        android:onClick="accessButtonClicked"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_centerHorizontal="true"
        android:text="Allow Access"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
        android:layout_marginTop="100dp"
        android:layout_below="@id/bodyTextView"/>


    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/sadImageView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingBottom="100dp"
        android:visibility="invisible"
        android:layout_marginBottom="100dp"
        android:background="@drawable/sad"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msgTextView"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:text="@string/permission_msg"/>


</RelativeLayout>